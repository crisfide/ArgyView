<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Frag4Config">

    <TextView
        android:id="@+id/tvConfigTema"
        android:text="Seleccionar tema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/spinnerTema"

        />

    <Spinner
        android:id="@+id/spinnerTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="1dp"
        android:spinnerMode="dropdown"
        android:textSize="15sp"

        app:layout_constraintTop_toBottomOf="@+id/tvConfigTema"


        />

</androidx.constraintlayout.widget.ConstraintLayout>